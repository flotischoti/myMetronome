// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Metronome {
  id          Int         @id @default(autoincrement())
  name        String      @db.VarChar(255)
  bpm         Int         
  beats       Int         @default(4)
  stressFirst Boolean     @default(false)
  lastOpened  DateTime?
  timerValue  Int         @default(120000)
  timerActive Boolean     @default(false)
  timeUsed    Int         @default(0)
  showStats   Boolean     @default(false)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  ownerRef    User        @relation(fields: [owner], references: [email])
  owner       String         
}

model User {
  email       String      @id
  password    String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  metronomes  Metronome[]
}